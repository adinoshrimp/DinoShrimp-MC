---
import clsx from 'clsx';

interface Props extends astroHTML.JSX.ButtonHTMLAttributes<HTMLButtonElement> {
  type?: 'default' | 'transparent';
  class?: string;
}

const { type = 'default', class: customClass, ...props } = Astro.props;

const baseClasses = 'flex w-fit justify-center items-center cursor-pointer transition-colors active:scale-95';
const typeClasses = {
  default: 'bg-violet-400 hover:bg-violet-700 text-background py-2 px-4',
  transparent: 'text-violet-400 hover:text-violet-700 py-2 px-4 bg-transparent'
};

const buttonClasses = clsx(baseClasses, typeClasses[type], customClass);
---

<button class={buttonClasses} {...props}>
  <slot />
</button>
